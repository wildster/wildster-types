{
    "compilerOptions": {
      "module": "ESNext",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "target": "ES2020",
      "noImplicitAny": true,
      "strict": true,
      "moduleResolution": "node",
      "sourceMap": false,
      "declarationMap": false,
      "outDir": "dist",
      "skipLibCheck": true,
      "lib": ["ES2020"],
      "declaration": true
    },
    "include": ["./src/**/*"]
  }
  